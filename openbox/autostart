#!/usr/bin/bash

#####################
#    Base setup     #
#####################

# Fix nvidia display
nvidia-fix &

# Xbindkeys
xbindkeys &

# Layout switcher
setxkbmap us,se -option grp:rctrl_switch

# Nitrogen
nitrogen --restore &

# Tint 2
tint2 &

# Compton
compton -bcC &

#####################
# Startup programs  #
#####################

steam &
spotify &
pulseeffects &
